@model IEnumerable<EmployeeManagement.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Management</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-add"></i>Add New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>
                <td>
                    <button class="btn btn-primary edit-btn" data-id="@item.Id"><i class="fa fa-pencil"></i>Edit</button>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fa fa-eye"></i>Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a>
                    <button class="btn btn-danger delete-btn" data-id="@item.Id"><i class="fa fa-trash"></i>Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal for editing employee -->
<div class="modal fade" id="editEmployeeModal" tabindex="-1" role="dialog" aria-labelledby="editEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editEmployeeModalLabel">Edit Employee</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Add an edit form inside the modal -->
                <form id="editEmployeeForm" asp-action="Edit">
                    <input type="hidden" name="Id" />
                    <div>
                        <label>First Name:</label>
                        <input type="text" name="FirstName" class="form-control" />
                    </div>
                    <div>
                        <label>Middle Name:</label>
                        <input type="text" name="MiddleName" class="form-control" />
                    </div>
                    <div>
                        <label>Last Name:</label>
                        <input type="text" name="LastName" class="form-control" />
                    </div>
                    <div>
                        <label>Email Address:</label>
                        <input type="text" name="EmailAddress" class="form-control" />
                    </div>
                    <div>
                        <label>Phone Number:</label>
                        <input type="text" name="PhoneNo" class="form-control" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/employee-scripts.js"></script>
